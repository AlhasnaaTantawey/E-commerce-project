<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.ECommerceProject" parent="Theme.Material3.Light.NoActionBar">

        <item name="colorPrimary">@color/primary_color</item>
        <item name="android:colorAccent">@color/primary_color</item>
        <item name="android:colorPrimaryDark">@color/primary_color</item>

        <!-- System UI Configurations-->
        <item name="android:statusBarColor">@color/white</item>
        <item name="android:windowLightStatusBar">true
        </item> <!-- For making status bar content color dark -->
        <item name="android:navigationBarColor">@android:color/white</item>
        <item name="android:windowLightNavigationBar" tools:targetApi="o_mr1">true
        </item>  <!-- For making Navigation bar content color dark -->n bar content color dark -->

    </style>

    <style name="Theme.ECommerceProject" parent="Base.Theme.ECommerceProject" />


    <!--    splash screen for less then 12 v-->
    <style name="Theme.MainActivity" parent="Base.Theme.ECommerceProject">
        <item name="android:windowBackground">@drawable/launch_background</item>
        <!-- System UI Configurations-->

        <item name="android:statusBarColor">@color/primary_color</item>
        <item name="android:windowLightStatusBar">false
        </item> <!-- For making status bar content color dark -->
        <item name="android:navigationBarColor">@color/primary_color</item>
        <item name="android:windowLightNavigationBar" tools:targetApi="o_mr1">false
        </item>  <!-- For making Navigation bar content color dark -->on bar content color dark -->
    </style>


    <style name="LargeTitleTextStyle">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/primary_dark_color</item>
        <item name="android:fontFamily">@font/poppins_bold</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_marginTop">16dp</item>
    </style>


    <style name="MeduimTitleTextStyle">
        <item name="android:fontFamily">@font/poppins_regular</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/neutral_grey</item>
        <item name="android:layout_gravity">center</item>

    </style>

    <style name="EditTextStyle">
        <item name="android:textColor">@color/neutral_grey</item>
        <item name="android:textColorHint">@color/neutral_grey</item>
        <item name="android:fontFamily">@font/poppins_regular</item>
        <item name="android:textSize">12sp</item>
        <item name="android:background">@drawable/edit_text_bg</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingEnd">16dp</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:drawablePadding">8dp</item>
    </style>

    <style name="PrimaryButtonStyle">
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/poppins_bold</item>
        <item name="android:textSize">14sp</item>
        <item name="android:background">@drawable/primary_button_bg</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_height">56dp</item>
        <item name="android:layout_width">match_parent</item>
    </style>

    <style name="LoginWithSocialmediaStyle">
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/neutral_grey</item>
        <item name="android:fontFamily">@font/poppins_bold</item>
        <item name="android:textSize">16sp</item>
        <item name="android:background">@drawable/edit_text_bg</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_height">56dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:padding">16dp</item>

    </style>

    <style name="ForgetPasswordTextViewStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/primary_color</item>
        <item name="android:fontFamily">@font/poppins_bold</item>
        <item name="android:textSize">14sp</item>
    </style>

</resources>